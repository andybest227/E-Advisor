<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:weightSum="2"
    android:gravity="center_vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:boxStrokeColor="@color/black"
        app:boxStrokeWidth="1dp"
        app:boxBackgroundMode="outline">

        <com.google.android.material.textfield.TextInputEditText
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:id="@+id/gradeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/grade_a_f"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:boxStrokeColor="@color/black"
        app:boxStrokeWidth="1dp"
        app:boxBackgroundMode="outline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/unitInput"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/unit"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/removeRowBtn"
        android:layout_marginTop="4dp"
        android:layout_width="50dp"
        android:layout_marginStart="9dp"
        android:background="@color/red_btn_bg_color"
        android:layout_height="57dp"
        android:textAllCaps="false"
        android:backgroundTint="@android:color/transparent"
        android:drawableLeft="@drawable/ic_delete_24"
        android:contentDescription="@string/remove_row"
        android:drawableTint="@color/white" />
</LinearLayout>
