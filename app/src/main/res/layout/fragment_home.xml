<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".ui.home.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_purple_gradient"
                android:padding="15dp"
                android:id="@+id/home_card"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ready_to_excel"
                        android:textColor="@color/white"
                        android:textSize="10pt"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:text="@string/nacest_advisor_is_here_for_you"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <View
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/adv_2"
                    android:layout_gravity="end"
                    />
            </LinearLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/buttons_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:flexWrap="wrap"
                android:layout_below="@id/home_card"
                app:justifyContent="space_between"
                app:dividerDrawableVertical="@drawable/vertical_space"
                app:alignItems="center">
                <Button
                    android:id="@+id/examsTips"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_exam_tips"
                    android:text="@string/exam_tips"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_purple_2"
                    android:padding="12dp"
                    android:textAllCaps="false"
                    android:elevation="6dp"
                    android:layout_marginBottom="15dp"
                    android:translationZ="2dp" />

                <Button
                    android:id="@+id/courseRecommendation"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_course_guide"
                    android:text="@string/course_guide"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_purple_2"
                    android:padding="12dp"
                    android:textAllCaps="false"
                    android:elevation="6dp"
                    android:layout_marginBottom="15dp"
                    android:translationZ="2dp" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_career_guide"
                    android:text="@string/career_guide"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_purple_2"
                    android:padding="12dp"
                    android:textAllCaps="false"
                    android:elevation="6dp"
                    android:id="@+id/careerGuide"
                    android:layout_marginBottom="15dp"
                    android:translationZ="2dp" />

                <Button
                    android:layout_width="100dp"
                    android:id="@+id/material_button"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_material_guide"
                    android:text="@string/material_guide"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_purple_2"
                    android:padding="12dp"
                    android:elevation="6dp"
                    android:textAllCaps="false"
                    android:layout_marginBottom="15dp"
                    android:translationZ="2dp" />
                <Button
                    android:id="@+id/cgpa_cal"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_performance_24"
                    android:text="@string/cgpa_cal"
                    android:textColor="@color/white"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/rounded_purple_2"
                    android:padding="12dp"
                    android:textAllCaps="false"
                    android:elevation="6dp"
                    android:translationZ="2dp" />

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_chat_24"
                    android:text="@string/logout"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_purple_2"
                    android:padding="12dp"
                    android:textAllCaps="false"
                    android:layout_marginBottom="15dp"
                    android:elevation="6dp"
                    android:translationZ="2dp" />
            </com.google.android.flexbox.FlexboxLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/about_layout"
                android:layout_below="@id/buttons_grid"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:paddingEnd="20dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textAlignment="textStart"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_purple_gradient"
                    android:drawableStart="@drawable/ic_check_circle"
                    android:drawablePadding="8dp"
                    android:text="@string/admin_privilege"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textAlignment="textStart"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_purple_gradient"
                    android:drawableStart="@drawable/ic_about"
                    android:drawablePadding="8dp"
                    android:text="@string/about_e_advisor"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cal_container"
                android:layout_below="@id/about_layout"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_purple_gradient"
                android:layout_marginBottom="70dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_prev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/ic_arrow_back_24"/>
                    <TextView
                        android:id="@+id/month_year_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/month_year"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_arrow_forward_24"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
                <GridLayout
                    android:id="@+id/calendar_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="7"
                    android:rowCount="6"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:alignmentMode="alignMargins"
                    android:useDefaultMargins="true"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>